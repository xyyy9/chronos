generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyLog {
  id           String   @id @default(uuid())
  logicalDate  DateTime @unique
  mood         Int
  sleepQuality Int
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
